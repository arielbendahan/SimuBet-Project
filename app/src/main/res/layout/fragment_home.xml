<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/logo_simubet"
        android:background="@color/blue"
        android:layout_gravity="center"
        android:layout_marginBottom="50dp"/>

    <!-- Title or Text above Scrollable Section -->
    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to SimuBet,\n (USER)"
        android:textSize="28sp"
        android:layout_marginBottom="35dp"
        android:gravity="center"/>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="No real money is used,\nBet in a safe environment,\nSee the results of your simulated parley"
    android:textSize="18sp"
    android:layout_marginBottom="50dp"
    android:gravity="center"
    tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/balance_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Balance: $0.00"
        android:textSize="20sp"
        android:layout_marginBottom="44dp"/>

    <!-- Logout Button -->
    <Button
        android:id="@+id/logout_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:layout_marginTop="24dp"
        android:layout_gravity="center"/>
</LinearLayout>
