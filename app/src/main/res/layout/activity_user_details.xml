<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- User Details Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:id="@+id/userDetailsLayout">

        <TextView
            android:id="@+id/userFullNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full Name"
            android:textSize="20sp"
            android:layout_marginBottom="8dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/userEmailTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/userTypeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/userBalanceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Balance"
            android:textSize="18sp"
            android:layout_marginBottom="16dp"
            android:gravity="center" />
    </LinearLayout>

    <!-- Activate/Deactivate Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/activateAccountButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activate Account"
            android:layout_marginEnd="16dp" />

        <Button
            android:id="@+id/deactivateAccountButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deactivate Account" />
    </LinearLayout>

    <!-- Bets -->
    <TextView
        android:id="@+id/betsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bets"
        android:textSize="26sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/betAmountTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bet Amount: $"
                android:textSize="18sp"
                android:gravity="center" />

            <TextView
                android:id="@+id/totalOddsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Odds: "
                android:textSize="18sp"
                android:gravity="center" />

            <TextView
                android:id="@+id/potentialWinTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Potential Win: $"
                android:textSize="18sp"
                android:gravity="center" />

        </LinearLayout>
    </ScrollView>

    <!-- Back Button -->
    <Button
        android:id="@+id/backToUsersButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back to Users Page"
        android:backgroundTint="@color/blue"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_marginBottom="20dp" />
</LinearLayout>
